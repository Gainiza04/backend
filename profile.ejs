<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>

    <%- include('../partials/index_style'); %>

</head>
<body style="background: #F5F2E7">
<%- include('../partials/navbar'); %>
<style>
    img {
        width: 100%;
        height: 100%
    }

    .bg-black {
        background: #000
    }

    .skill-block {
        width: 30%
    }

    @media (min-width: 991px) and (max-width: 1200px) {
        .skill-block {
            padding: 32px !important
        }
    }

    @media (min-width: 1200px) {
        .skill-block {
            padding: 56px !important
        }
    }

    body {
        background-color: #eeeeee
    }
</style>
<div class="container mt-5 mb-5">
    <div class="row no-gutters">
        <div class="col-md-4 col-lg-4"><img
                    src="https://res.cloudinary.com/dluwizg51/image/upload/v1650639365/no-pic-ava_ac9buw.jpg">
            <br><br>
            <button class="btn btn-outline-primary col-12">Settings</button>
        </div>
        <div class="col-md-8 col-lg-8">
            <div class="d-flex flex-column">
                <div class="d-flex flex-row justify-content-between align-items-center p-5 bg-info text-dark">
                    <h3 class="display-5"><%= user.first_name %> <%= user.last_name %></h3><i class="fa fa-facebook"></i><i class="fa fa-google"></i><i
                            class="fa fa-youtube-play"></i><i class="fa fa-dribbble"></i><i class="fa fa-linkedin"></i>
                </div>
                <div class="p-3 bg-muted text-black">
                    <h5 class="mx-1"><%= user.email %></h5>
                </div>
                <div class="d-flex flex-row text-white">
                    <div class="p-4 bg-primary text-center skill-block">
                        <h4>0</h4>
                        <h6>Purchases</h6>
                    </div>
                    <div class="p-3 bg-success text-center skill-block">
                        <h4>0</h4>
                        <h6>Favorites</h6>
                    </div>
                    <div class="p-3 bg-warning text-center skill-block">
                        <h4>0</h4>
                        <h6>Cart</h6>
                    </div>
                    <div class="p-3 bg-danger text-center skill-block">
                        <h4>0</h4>
                        <h6>Referrals</h6>
                    </div>
                </div>
                <div class="p-3 bg-muted text-black">
                    <h5 class="mx-1"><%= user.phone %></h5>
                </div>
                <button class="btn btn-danger col-3" onclick="location.href = '/logout'">Logout</button>
            </div>
        </div>
    </div>
</div>
<br><br><br>
</body>
</html>